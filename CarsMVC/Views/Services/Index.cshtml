@using CarsMVC.ViewModels
@model IEnumerable<ServiceViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Services for @ViewBag.carString</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TechName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TechName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCost)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServiceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ServiceID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ServiceID })
        </td>
    </tr>
}

</table>
