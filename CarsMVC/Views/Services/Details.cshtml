@using Corron.CarService
@model ServiceModel

@{
    ViewBag.Title = "View";
}

<h2>Details for Service: @ViewBag.CarString</h2>

<div>
    <h4>ServiceModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ServiceDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TechName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TechName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LaborCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LaborCost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PartsCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalCost)
        </dd>
    </dl>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineList[0].ServiceLineTypeString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineList[0].ServiceLineDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceLineList[0].ServiceLineChargeString)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.ServiceLineList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceLineTypeString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceLineDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceLineChargeString)
            </td>
        </tr>
        }

    </table>


</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ServiceID }) |
    @Html.ActionLink("Back to List", "Index", new { id = Model.CarID })
</p>
